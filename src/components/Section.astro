---
const { id, title, class: className } = Astro.props;
---

<section id={id} class={['section py-16 md:py-24', className].filter(Boolean).join(' ')}>
  <div class="container-px w-full">
    {title && <h2 class="text-4xl md:text-5xl font-bold tracking-wide uppercase mb-8">{title}</h2>}
    <slot />
  </div>
</section>
