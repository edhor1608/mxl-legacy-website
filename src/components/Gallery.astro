---
import { Picture } from "astro:assets";
import Section from "./Section.astro";

interface Props {
  gallery: Array<{
    src: string;
    cap: string;
    date: string;
  }>;
}

const { gallery } = Astro.props;
---

<Section id="gallery" title="Galerie & Medienarchiv">
  <p class="text-[#F4F4F4]/80 max-w-3xl mb-8">
    Eine visuelle Reise durch die Geschichte von MXL: Renn-Screenshots, Logos,
    fr√ºhe Website-Mockups und Discord-Momente.
  </p>
  <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
    {
      gallery.map((item) => (
        <figure class="rounded-xl overflow-hidden border border-[#F4F4F4]/10 bg-[#F4F4F4]/5 group hover:border-[#9FFE88]/30 transition-all duration-300">
          <Picture
            src={item.src}
            alt={item.cap}
            width={1000}
            height={1000}
            class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-[1.02]"
            formats={["avif", "webp"]}
          />
          <figcaption class="px-4 py-3">
            <p class="text-sm font-medium text-[#F4F4F4]/90">{item.cap}</p>
            <p class="text-xs text-[#F4F4F4]/50 mt-1">{item.date}</p>
          </figcaption>
        </figure>
      ))
    }
  </div>
</Section>

