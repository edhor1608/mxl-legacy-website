    <!-- Background Pattern (very subtle) -->
    <div class="absolute inset-0 opacity-[0.07] pointer-events-none">
      <div 
        class="absolute inset-0"
        style="background-image: linear-gradient(rgba(159, 254, 136, 0.12) 1px, transparent 1px), linear-gradient(90deg, rgba(159, 254, 136, 0.12) 1px, transparent 1px); background-size: 30px 30px;"
      ></div>
    </div>

    <!-- Dense, flowing text wall -->
    <div class="relative text-center leading-tight">
      {phrases.map((phrase) => (
        <span
          id={phrase.id}
          data-phrase
          class={`phrase inline-block mx-1 my-0.5 group cursor-default ${phrase.style.fontSize} ${phrase.style.fontWeight} ${phrase.style.fontStyle} ${phrase.style.color}`}
          style={`--rot:${phrase.style.rotation}deg; transition-delay:${phrase.style.delay}ms;`}
          title={`"${phrase.text}" - ${phrase.author}${phrase.context ? ` (${phrase.context})` : ''}`}
