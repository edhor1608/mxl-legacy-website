---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/Nav.astro";
import Section from "../components/Section.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const page = {
  title: "Kontakt & Mitmachen",
  description: "Hilf mit, die Geschichte der MXL zu bewahren: Replays, Grafiken, Texte und Anekdoten für das Legacy-Projekt.",
  canonical: "https://mxl-legacy.de/contact",
  image: "/assets/og-cover.jpg",
  type: "website",
};
---

<BaseLayout {...page}>
  <Nav />
  <Section id="contact-page" title="Mitmachen">
    <p class="text-[#F4F4F4]/80 max-w-2xl">
      Hilf mit, die Geschichte der MXL zu bewahren: Replays, Grafiken, Texte,
      Anekdoten. Öffne ein Issue oder eine PR – oder melde dich mit Material,
      das wir kuratieren dürfen.
    </p>
    <a
      href="https://github.com/edhor1608/mxl-legacy-website"
      class="mt-6 inline-block rounded bg-[#9FFE88] text-[#201D1F] px-5 py-3 font-medium hover:opacity-90"
      >GitHub</a
    >
  </Section>
  <Footer />
</BaseLayout>
