---
import { Picture } from 'astro:assets';

import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import "../../styles/global.css";

const person = {
  nickname: "Bloodron",
  role: "Technical Architect",
  tagline: "The Glitch Slayer",
  bio: "Architect of MXL's rulebook, proto-admin to Wolfson, later co-captain of MXL Racing. Known for a near-obsessive eye for fairness.",
  img: "/images/Bloodron83.png",
  details: [
    'Coined the name "MXL" for the league',
    "Built the race rules engine and technical infrastructure",
    "Served as Wolfson's right hand during the formative years",
    "Stepped up as joint-leader after Wolf's passing",
    "Known for meticulous attention to competitive fairness",
  ],
};
---

<BaseLayout
  title={`${person.nickname} - MXL Legacy`}
  description={`${person.role}: ${person.tagline}`}
>
  <Nav />

  <section class="min-h-screen pt-20">
    <div class="container-px py-12">
      <div class="max-w-4xl mx-auto">
        <!-- Breadcrumb -->
        <nav class="mb-8">
          <a
            href="/#hall-of-fame"
            class="text-[#9FFE88] hover:opacity-80 transition-opacity"
          >
            ‚Üê Back to Hall of Fame
          </a>
        </nav>

        <!-- Hero Section -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
          <div>
            <div class="relative">
              <Picture
                src={person.img}
                alt={person.nickname}
                formats={["avif", "webp"]}
                class="w-full rounded-2xl border border-[#F4F4F4]/10"
              />
              <div class="absolute top-4 right-4">
                <span
                  class="rounded-full bg-[#201D1F]/80 px-3 py-1 text-xs uppercase tracking-wide font-medium"
                >
                  Architect
                </span>
              </div>
            </div>
          </div>

          <div>
            <h1 class="text-4xl font-bold mb-4">{person.nickname}</h1>
            <div class="mb-6">
              <span
                class="inline-block bg-[#9FFE88]/20 text-[#9FFE88] px-4 py-2 rounded-full text-sm font-medium"
              >
                {person.role}
              </span>
            </div>
            <h2 class="text-xl text-[#F4F4F4]/80 mb-6 italic">
              "{person.tagline}"
            </h2>
            <p class="text-[#F4F4F4]/70 leading-relaxed mb-8">{person.bio}</p>

            <!-- Key Details -->
            <div class="space-y-3">
              {
                person.details.map((detail) => (
                  <div class="flex items-start gap-3">
                    <div class="w-2 h-2 rounded-full bg-[#9FFE88] mt-2 flex-shrink-0" />
                    <p class="text-[#F4F4F4]/70 text-sm">{detail}</p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Timeline Connection -->
        <div
          class="mt-16 p-6 rounded-2xl border border-[#F4F4F4]/10 bg-gradient-to-r from-[#F4F4F4]/5 to-[#F4F4F4]/[0.02]"
        >
          <h3 class="text-lg font-semibold mb-3">Timeline Impact</h3>
          <p class="text-[#F4F4F4]/70 text-sm">
            Bloodron's technical foundation was crucial from the early days
            through the ProSeries era. His leadership during the post-Wolf
            transition period and eventual burnout in June 2019 marked another
            critical juncture in MXL's story.
          </p>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

